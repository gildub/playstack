# To replace keystone::endpoints
# wrapping custom resource into a class
class keystone_extra {
  keystone::resource::service_identity { 'keystone':
    public_url          => "http://<%= configatron.scenario.ip.public %>:5000/v2.0",
    internal_url        => "http://<%= configatron.scenario.ip.internal %>:35357/v2.0",
    admin_url           => "http://<%= configatron.scenario.ip.admin %>:5000/v2.0",
    service_type        => 'identity',
    service_description => 'OpenStack Identity Service',
    service_name        => 'services',
    email               => '<%= configatron.openstack.admin.email %>',
    auth_name           => 'admin',
    password            => '<%= configatron.openstack.keystone.password %>',
  }
}
